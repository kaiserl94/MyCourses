<h1 class="page-header">Admin Panel</h1>

<div class="inner-content transparent">
	<div class="card admin-card">
		<h1>Grant Teacher</h1>
		<form method="post" action="/admin" class="form">
			<label>Users:</label>
			<select name="userToTeacher" style="margin-bottom: 20px">
				{{#each users as |user|}}
					<option value="{{user.userID}}">{{user.username}}</option>
				{{/each}}
			</select>
			<button type="submit" class="submit-button add-course-button">Grant Teacher Priv</button>
		</form>
	</div>

	<div class="card admin-card">
		<h1>Revoke Teacher</h1>
		<form method="post" action="/admin" class="form">
			<label>Teachers:</label>
			<select name="teacherToUser" style="margin-bottom: 20px">
				{{#each data as |instructor|}}
					<option value="{{instructor.userID}}">{{instructor.username}}</option>
				{{/each}}
			</select>
			<button type="submit" class="submit-button add-course-button">Revoke Teacher Priv</button>
		</form>
	</div>

	<div class="card admin-card">
		<h1>Grant Admin</h1>
		<form method="post" action="/admin" class="form">
			<label>Users:</label>
			<select name="userToAdmin" style="margin-bottom: 20px">
				{{#each users as |user|}}
					<option value="{{user.userID}}">{{user.username}}</option>
				{{/each}}
			</select>
			<button type="submit" class="submit-button add-course-button">Grant Admin Priv</button>
		</form>
	</div>

	<div class="card admin-card">
		<h1>Revoke Admin</h1>
		<form method="post" action="/admin" class="form">
			<label>Admins:</label>
			<select name="adminToStudent" style="margin-bottom: 20px">
				{{#each admins as |admin|}}
					<option value="{{admin.userID}}">{{admin.username}}</option>
				{{/each}}
			</select>
			<button type="submit" class="submit-button add-course-button">Revoke Admin Priv</button>
		</form>
	</div>
	<div class="card admin-card add-course-card">
		<h1>Add Course</h1>
		<form method="post" action="/admin" class="form">
			<label>Course Code:</label>
			<label>Instructor:</label>
			<label>Faculty:</label>
			<label>Course Name:</label>
			<input type="text" name="courseCode" pattern="[0-9]{2}-[0-9]{2}-[0-9]{3}-[0-9]{2}" required/>
			<select name="instructor">
				{{#each data as |instructor|}}
					<option value="{{instructor.username}}">{{instructor.username}}</option>
				{{/each}}
			</select>
			<input type="text" name="faculty" required/>
			<input type="text" name="courseName" required/>
			<label>Semester Code:</label>
			<label>Start Time:</label>
			<label>End Time:</label>
			<label>Day / Days:</label>
			<input type="text" name="semesterCode" pattern="[0-9]{4}_[A-Za-z]+" required/>
			<select name="start" required>
					<option value="08:30:00">8:30 AM</option>
					<option value="10:00:00">10:00 AM</option>
					<option value="11:30:00">11:30 AM</option>
					<option value="13:00:00">1:00 PM</option>
					<option value="14:30:00">2:30 PM</option>
					<option value="16:00:00">4:00 PM</option>
					<option value="17:30:00">5:30 PM</option>
					<option value="19:00:00">7:00 PM</option>
					<option value="20:30:00">8:30 PM</option>
			</select>
			<select name="end" required>
					<option value="09:50:00">9:50 AM</option>
					<option value="11:20:00">11:20 AM</option>
					<option value="12:50:00">12:50 PM</option>
					<option value="14:20:00">2:20 PM</option>
					<option value="15:50:00">3:50 PM</option>
					<option value="17:20:00">5:20 PM</option>
					<option value="18:50:00">6:50 PM</option>
					<option value="20:20:00">8:20 PM</option>
					<option value="21:50:00">9:50 PM</option>
			</select>
			<select name="days" required>
					<option value="Mon">Monday</option>
					<option value="Tue">Tuesday</option>
					<option value="Wed">Wednesday</option>
					<option value="Thu">Thursday</option>
					<option value="Fri">Friday</option>
					<option value="Mon-Wed">Monday / Wednesday</option>
					<option value="Tue-Thu">Tuesday / Thursday</option>
			</select>
			<label>Description:</label>
			<textarea name="description" required></textarea>
			<button type="submit" class="submit-button add-course-button">Add Course</button>
		</form>
	</div>
</div>